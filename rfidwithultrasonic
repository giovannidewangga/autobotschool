#include <SPI.h> // Include SPI library (Serial Peripheral Interface)
#include <MFRC522.h> // Include MFRC522 library for RFID
#include <Wire.h> // Include Wire library for I2C communication

/*
For ESP32
Wiring:
3.3V -> 3V3
RST -> D22
GND -> GND
MISO -> D19
MOSI -> D23
SCK -> D18
SDA -> D21
*/

#define SS_PIN 21 // Define Slave Select pin for SPI
#define RST_PIN 22 // Define Reset pin for SPI
const int LED1 = 5; // Define pin for LED1
const int LED2 = 2; // Define pin for LED2
const int Trig = 14; // Define pin for Trigger of Ultrasonic sensor
const int Echo = 25; // Define pin for Echo of Ultrasonic sensor
float jarak, waktu; // Define variables for distance and time

#define Suara 0.034 // Define speed of sound in cm/us

MFRC522 mfrc522(SS_PIN, RST_PIN); // Create MFRC522 instance

void setup() {
  Serial.begin(9600); // Start serial communication at 9600 baud rate
  SPI.begin(); // Start SPI communication
  mfrc522.PCD_Init(); // Initialize MFRC522
  pinMode(LED1, OUTPUT); // Set LED1 as output
  pinMode(LED2, OUTPUT); // Set LED2 as output
  pinMode(Trig, OUTPUT); // Set Trigger as output
  pinMode(Echo, INPUT); // Set Echo as input
}

void loop() {
  digitalWrite(Trig, HIGH); // Send a 10us high pulse on Trig pin
  delayMicroseconds(10);
  digitalWrite(Trig, LOW);
  waktu = pulseIn(Echo, HIGH); // Read the time for which the Echo pin stays high
  jarak = waktu * Suara/2; // Calculate the distance

  if ( ! mfrc522.PICC_IsNewCardPresent()) // If no new card is present
  {
    return;
  }
  if ( ! mfrc522.PICC_ReadCardSerial()) // If card serial cannot be read
  {
    return;
  }

  String content=""; // Define a string to hold card content

  byte letter;

  for (byte i = 0; i < mfrc522.uid.size; i++) // For each byte in the card's UID
  {
    content.concat(String(mfrc522.uid.uidByte[i]< 0x10 ? " 0" : " ")); // Add a space to the content string
    content.concat(String(mfrc522.uid.uidByte[i], HEX)); // Add the byte to the content string
  }
  Serial.println();
  content.toUpperCase(); // Convert content to uppercase

  if((content.substring(1) == "F5 E9 DE 20") && (jarak < 20)) // If the card's UID matches and the distance is less than 20cm
  {
    Serial.println("CARD ACCESS GRANTED"); // Print "GRANTED"
    Serial.println("WELCOME!!");
    digitalWrite(LED1, HIGH); // Turn on LED1
    delay(2000); // Wait for 2 seconds
    digitalWrite(LED1, LOW); // Turn off LED1
    delay(1000); // Wait for 1 second
  }
  else if((content.substring(1) == "51 F1 5D 27") && (jarak<20)) // If the card's UID matches and the distance is less than 20cm
  {
    Serial.println("ACCESS GRANTED"); // Print "GRANTED"
    Serial.println("WELCOME!!");
    digitalWrite(LED2, HIGH); // Turn on LED2
    delay(2000); // Wait for 2 seconds
    digitalWrite(LED2, LOW); // Turn off LED2
    delay(1000); // Wait for 1 second
  }
  else 
  {
    Serial.println("ERROR!!!");
    Serial.println("ACCESS DENIED"); // Print "DENIED"
    delay(2000); // Wait for 2 seconds
    digitalWrite(LED1, LOW); // Turn off LED1
    digitalWrite(LED2, LOW); // Turn off LED2
  }
}
